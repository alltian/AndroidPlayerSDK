<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="98dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="13dp"
            android:textColor="@color/colorText0"
            android:text="@string/device_id" />

        <EditText
            android:id="@+id/edt_device_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="85dp"
            android:textSize="13dp"
            android:background="@drawable/edit_text_background" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="13dp"
            android:textColor="@color/colorText0"
            android:text="@string/player_channel" />

        <EditText
            android:id="@+id/edt_channel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="85dp"
            android:textSize="13dp"
            android:background="@drawable/edit_text_background"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="13dp"
            android:textColor="@color/colorText0"
            android:text="APIKey" />

        <EditText
            android:id="@+id/edt_api_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="85dp"
            android:textSize="13dp"
            android:background="@drawable/edit_text_background"/>
    </FrameLayout>

    <TextView
        android:id="@+id/text_entry"
        android:layout_width="317dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:enabled="false"
        android:textSize="13dp"
        android:textColor="@color/colorText1"
        android:text="@string/player_entry"
        android:background="@drawable/btn_background_0"/>
</LinearLayout>
